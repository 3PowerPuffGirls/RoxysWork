<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BudgetMobileApp.BudgetEditor">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <StackLayout Orientation="Horizontal"
                         Grid.Row="1">
                <Entry x:Name="BudgetEntry" 
                Placeholder="Enter Your New Monthly Budget"
                   />
                <Button Text="Enter"
                    HeightRequest="20"
                    />
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>